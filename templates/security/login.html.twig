{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
	{{ encore_entry_link_tags('css/div') }}
	{{ encore_entry_link_tags('css/label') }}
	{{ encore_entry_link_tags('css/input') }}
	{{ encore_entry_link_tags('css/button') }}


	<div class='login-title'>

		<h1>Connexion</h1>
	</div>

	<div class='login-displayLogin'>
		<div class='login-form'>

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<form method="post">
				<div class='form-group'>
					<label for="inputUsername" class='login-label'>Nom d'utilisateur</label>
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class='login-input' required autofocus>
				</div>
				<div class='form-group'>
					<label for="inputPassword" class='login-label'>Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class='login-input' required>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div>
					<button class="btn btn-primary" type="submit">Connexion</button>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
