{% extends 'base.html.twig' %}
{# Affiche le profil de l'utilsateur avec ses informations'#}
{% block title %}Profil
{% endblock %}

{% block body %}
	{{ encore_entry_link_tags('css/img') }}
	{{ encore_entry_link_tags('css/div') }}
	{{ encore_entry_link_tags('css/label') }}
	{{ encore_entry_link_tags('css/input') }}
	{{ encore_entry_link_tags('css/button') }}
	{{ encore_entry_link_tags('css/link') }}


	<div class="css-profil">
		<img src="{{ asset( srcImage ) }}" class="css-profilPicture">
		{{ form_start(formProfil) }}

		<div class="div">
			{{ form_label(formProfil.firstname, 'Prénom', {'label_attr': {'class': 'css-profilLabel'}}) }}
			{{ form_widget(formProfil.firstname, {'attr': {'class': 'css-profilInput'}}) }}
		</div>
		<div>
			{{ form_label(formProfil.name, 'Nom', {'label_attr': {'class': 'css-profilLabel'}}) }}
			{{ form_widget(formProfil.name, {'attr': {'class': 'css-profilInput'}}) }}
		</div>

		<div class="form">
			{{ form_label(formProfil.email, 'Email',{'label_attr': {'class': 'css-profilLabel'}}) }}
			{{ form_widget(formProfil.email, {'attr': {'class': 'css-profilInput'}}) }}

		</div>
		<div>
			{{ form_label(formProfil.phone, 'Téléphone',{'label_attr': {'class': 'css-profilLabel'}}) }}
			{{ form_widget(formProfil.phone, {'attr': {'class': 'css-profilInput'}}) }}
		</div>
		<div>
			<a class='css-profilLink' href="{{ path('pwdchange',{username : app.user.username }) }}">
				Modifier le mot de passe</a>
		</div>

		<div class="form">
			{{ form_label(formProfil.notificationmail, 'Voulez-vous recevoir une notification par mail ?', {'label_attr': {'class': 'css-profilNotification'}}) }}
			{{ form_widget(formProfil.notificationmail) }}
		</div>
		<div class="form">
			{{ form_label(formProfil.notificationsms, 'Voulez-vous recevoir une notification par sms ?', {'label_attr': {'class': 'css-profilNotification'}}) }}
			{{ form_widget(formProfil.notificationsms) }}
		</div>

		<div class="form">
			{{ form_widget(formProfil.image, {'attr': {'class': 'css-profilUpload'}}) }}
		</div>

		<div class="form">
			<button type="submit" name="modification" value="modification" class="css-profilModification">Modifier
				<img class="extern" src="{{ asset('image/squarePenEdit.png') }}" height="16" width="16"></button>
		</div>
		{{ form_end(formProfil) }}
	</div>

{% endblock %}
